mixin ourCoursesSection
  section#ourcourses.section-services.py-5
    .container.pt-5
      h2.display-1.text-center.text-uppercase Виды Работ
      h3.mb-5.text-center.text-muted Наша Компания предоставляет следующие услуги
      
      .row.mx-5
        each course in courses
          .col-md-6.col-lg-4
            .service-item.bg-light.p-4
              a.card-link(href="/courses/"+course.slug)
                .service-image.icon-image.mb-5
                  img.h-100(src="/images/"+course.icon, alt=course.title)
                .service-content
                  h4.service-title= course.headline
                  a.text-muted.font-weight-bold='Подробнее...'

