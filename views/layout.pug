    .h-100.d-flex.flex-column
      div.container
        if currentPath !== "/"
          +navigation
      .flex-grow-1
        block content
      if !currentPath.includes('admin')
        +footer
      if user
        +menuFooter
      

    #contactFormModal.modal(tabindex='-1', role='dialog', aria-labelledby='contactFormModal', aria-hidden='true')
      .modal-dialog.modal-dialog-centered
